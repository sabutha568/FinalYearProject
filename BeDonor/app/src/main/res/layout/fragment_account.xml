<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    tools:context=".AccountFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >


    <ImageView
        android:id="@+id/account_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/add_image"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        />
        <TextView
            android:id="@+id/account_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_image"
            android:fontFamily="@font/sf_compact"
            android:textColor="#454545"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textSize="22sp"
            android:text="Name"/>

            <TextView
                android:id="@+id/account_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_name"
                android:fontFamily="@font/sf_compact"
                android:textColor="#454545"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:text="Number"/>



            <TextView
                android:id="@+id/account_blood_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/account_number"
                android:fontFamily="@font/sf_compact"
                android:textColor="#454545"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="22sp"
                android:text="Blood Group"/>

        <ImageView
            android:id="@+id/account_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_image"
            android:layout_alignRight="@id/account_image"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/user_edit"/>



</RelativeLayout>

    </ScrollView>

</RelativeLayout>